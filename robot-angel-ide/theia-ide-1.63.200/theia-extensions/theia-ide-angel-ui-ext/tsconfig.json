{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2019"],
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false
  },
  "include": [
    "src/**/*"
  ]
}