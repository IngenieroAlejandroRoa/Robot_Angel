{
  "private": true,
  "name": "robot-angel-theia",
  "version": "0.1.0",
  "main": "lib/backend/electron-main.js",
  "theia": {
    "target": "electron"
  },
  "theiaPluginsDir": "plugins",
  "scripts": {
    "bundle": "theia build --mode development",
    "start": "theia start --app-target=electron --hostname 127.0.0.1 --port 3000 --plugins=local-dir:plugins",
    "clean": "rm -rf lib node_modules package-lock.json",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@theia/core": "1.44.0",
    "@theia/editor": "1.44.0",
    "@theia/filesystem": "1.44.0",
    "@theia/messages": "1.44.0",
    "@theia/monaco": "1.44.0",
    "@theia/navigator": "1.44.0",
    "@theia/preferences": "1.44.0",
    "@theia/process": "1.44.0",
    "@theia/terminal": "1.44.0",
    "@theia/workspace": "1.44.0",
    "@theia/plugin-ext-vscode": "1.44.0",
    "@theia/vsx-registry": "1.44.0",
    "@theia/electron": "1.44.0"
  },
  "devDependencies": {
    "@theia/cli": "1.44.0",
    "electron": "23.2.4",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.robotangel.ide",
    "productName": "Robot Angel IDE",
    "files": [
      "lib/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": { "target": ["AppImage"] },
    "win": { "target": ["nsis"] }
  }
}
