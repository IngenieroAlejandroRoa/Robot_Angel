#!/usr/bin/env bash
# ==============================================================
# Robot Angel - Instalador general para Linux (Ubuntu / ROS 2 Jazzy)
# VersiÃ³n 2.0 - Mejorada con comprobaciones y fallos tolerables
# ==============================================================

set -e  # Detener en errores graves

# --- Colores ---
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
RED='\033[1;31m'
NC='\033[0m'

echo -e "${GREEN}ðŸ¤– Instalador Robot Angel - Linux (ROS 2 Jazzy)${NC}"
sleep 1

# --- Crear entorno virtual ---
VENV_PATH="$HOME/.venvs/robot-angel"
if [ ! -d "$VENV_PATH" ]; then
  echo -e "${YELLOW}ðŸ“¦ Creando entorno virtual Python...${NC}"
  python3 -m venv "$VENV_PATH"
fi
source "$VENV_PATH/bin/activate"

# --- Actualizar pip y dependencias ---
echo -e "${GREEN}ðŸ Actualizando pip y dependencias Python...${NC}"
pip install --upgrade pip setuptools wheel
pip install -r "$(dirname "$0")/requirements.txt" || true

# --- Actualizar repositorios ---
echo -e "${GREEN}ðŸ” Verificando y actualizando repositorios...${NC}"
sudo apt update -y

# --- Instalar dependencias del sistema ---
echo -e "${GREEN}âš™ï¸  Instalando dependencias base del sistema...${NC}"
sudo apt install -y git curl build-essential python3-colcon-common-extensions python3-rosdep

# --- Instalar ROS 2 Jazzy si no estÃ¡ ---
if ! command -v ros2 &> /dev/null; then
  echo -e "${YELLOW}âš™ï¸  Instalando ROS 2 Jazzy (puede tardar unos minutos)...${NC}"
  sudo apt install -y ros-jazzy-desktop
fi
source /opt/ros/jazzy/setup.bash

# --- micro-ROS Agent ---
echo -e "${GREEN}ðŸš€ Instalando micro-ROS Agent...${NC}"
if apt-cache search ros-jazzy-micro-ros-agent | grep -q "ros-jazzy-micro-ros-agent"; then
  echo -e "${YELLOW}ðŸ“¦ Instalando paquete binario micro-ROS Agent...${NC}"
  sudo apt install -y ros-jazzy-micro-ros-agent
else
  echo -e "${YELLOW}âš ï¸  Paquete no disponible. Compilando desde fuente...${NC}"
  mkdir -p ~/uros_ws/src
  cd ~/uros_ws/src

  # Clonar solo si no existe
  if [ ! -d "micro-ROS-Agent" ]; then
    git clone -b jazzy https://github.com/micro-ROS/micro-ROS-Agent.git || true
  fi

  cd ~/uros_ws
  rosdep update
  rosdep install --from-paths src --ignore-src -y --rosdistro jazzy

  # Dependencias Python requeridas
  echo -e "${GREEN}ðŸ Instalando dependencias de compilaciÃ³n Python...${NC}"
  pip install --upgrade catkin_pkg empy setuptools colcon-common-extensions

  # Compilar micro-ROS Agent
  echo -e "${GREEN}ðŸ§± Compilando micro-ROS Agent (esto puede tardar)...${NC}"
  colcon build --symlink-install || {
    echo -e "${RED}âŒ Error en compilaciÃ³n del micro-ROS Agent${NC}"
    exit 2
  }

  echo -e "${YELLOW}ðŸ“„ AÃ±adiendo micro-ROS Agent al entorno permanente...${NC}"
  if ! grep -q "uros_ws/install/setup.bash" ~/.bashrc; then
    echo 'source ~/uros_ws/install/setup.bash' >> ~/.bashrc
  fi
fi

# --- ESP-IDF ---
echo -e "${GREEN}ðŸ”§ Configurando ESP-IDF...${NC}"
mkdir -p ~/tools
cd ~/tools

if [ ! -d "esp-idf" ]; then
  git clone -b v6.0 --recursive https://github.com/espressif/esp-idf.git
fi
cd esp-idf

# InstalaciÃ³n de entorno Python de IDF
./install.sh || true

# AÃ±adir export permanente si no existe
